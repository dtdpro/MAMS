<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="accessibility">
		<field
			name="art_id"
			type="text"
			class="readonly" 
			label="JGLOBAL_FIELD_ID_LABEL"
			description ="JGLOBAL_FIELD_ID_DESC"
			readonly="true"
		/>
		<field
			name="published"
			type="list"
			id="published"
			class="inputbox"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC"
			size="1"
			default="1"
			filter="integer">
			<option	value="1">JPUBLISHED</option>
			<option	value="0">JUNPUBLISHED</option>
			<option	value="2">JARCHIVED</option>
			<option	value="-2">JTRASHED</option>
		</field>
		<field
			name="access"
			type="accesslevel"
			id="access"
			class="inputbox"
			label="JFIELD_ACCESS_LABEL"
			description="JFIELD_ACCESS_DESC"
			default="1"
			filter="integer"/>
		<field
			name="feataccess"
			type="accesslevel"
			id="feataccess"
			class="inputbox"
			label="COM_MAMS_ARTICLE_FIELD_FEATACCESS_LABEL"
			description="COM_MAMS_ARTICLE_FIELD_FEATACCESS_DESC"
			default="1"
			filter="integer"/>
		<field
			name="ordering"
			type="OrderArticle"
			class="inputbox"
			label="JFIELD_ORDERING_LABEL"
			description="JFIELD_ORDERING_DESC"
		/>
		
	</fieldset>
	<fieldset name="info">
		<field
			name="art_title"
			type="text"
			label="COM_MAMS_ARTICLE_FIELD_TITLE_LABEL"
			description="COM_MAMS_ARTICLE_FIELD_TITLE_DESC"
			class="inputbox"
			required="true"
			default=""
		/>
		<field
			name="art_alias"
			type="text"
			label="COM_MAMS_ARTICLE_FIELD_ALIAS_LABEL"
			description="COM_MAMS_ARTICLE_FIELD_ALIAS_DESC"
			class="inputbox"
			default=""
		/>
		<field
			name="art_sec"
			type="ArticleSecs"
			class="inputbox"
			label="COM_MAMS_ARTICLE_FIELD_SEC_LABEL"
			description="COM_MAMS_ARTICLE_FIELD_SEC_DESC"
			required="true"
		/>
		<field
			name="art_published" 
			type="calendar"
			label="COM_MAMS_ARTICLE_FIELD_PUBLISHED_LABEL"
			description="COM_MAMS_ARTICLE_FIELD_PUBLISHED_DESC"
			format="%Y-%m-%d"
			required="true"
		/>
		<field
			name="art_desc"
			type="textarea"
			label="COM_MAMS_ARTICLE_FIELD_DESC_LABEL"
			description="COM_MAMS_ARTICLE_FIELD_DESC_DESC"
			rows="6"
			cols="80"
			class="inputbox"
			filter="safehtml"
			buttons="false"
		/>
	</fieldset>
	<fieldset name="content">
		<field
			name="art_keywords"
			type="textarea"
			label="COM_MAMS_ARTICLE_FIELD_KEYWORDS_LABEL"
			description="COM_MAMS_ARTICLE_FIELD_KEYWORDS_DESC"
			rows="4"
			cols="70"
			class="inputbox"
			filter="safehtml"
			buttons="false"
		/>	
		<field
			name="art_thumb"
			type="text"
			label="COM_MAMS_ARTICLE_FIELD_THUMB_LABEL"
			description="COM_MAMS_ARTICLE_FIELD_THUMB_DESC"
			size="70"
			class="inputbox"
			default=""
		/>
		<field
			name="art_show_related"
			type="radio"
			label="COM_MAMS_ARTICLE_FIELD_SHOWRELATED_LABEL"
			description="COM_MAMS_ARTICLE_FIELD_SHOWRELATED_DESC"
			class="btn-group"
			default="1">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</field>
	</fieldset>
	<fieldset name="body">
		<field
			name="art_content"
			type="editor"
			label="COM_MAMS_ARTICLE_FIELD_CONTENT_LABEL"
			description="COM_MAMS_ARTICLE_FIELD_CONTENT_DESC"
			class="inputbox"
			required="false"
			filter="raw"
		/>
	</fieldset>
</form>

