<?xml version="1.0" encoding="UTF-8"?>
<form>
    <fields name="filter">
        <field
                name="search"
                type="text"
                label="COM_CONTENT_FILTER_SEARCH_DESC"
                hint="JSEARCH_FILTER"
        />
        <field
                name="state"
                type="status"
                label="COM_CONTENT_FILTER_PUBLISHED"
                description="COM_CONTENT_FILTER_PUBLISHED_DESC"
                onchange="this.form.submit();"
        >
            <option value="">JOPTION_SELECT_PUBLISHED</option>
        </field>
        <field
                name="access"
                type="accesslevel"
                label="JOPTION_FILTER_ACCESS"
                description="JOPTION_FILTER_ACCESS_DESC"
                onchange="this.form.submit();"
        >
            <option value="">JOPTION_SELECT_ACCESS</option>
        </field>
        <field
                name="feataccess"
                type="accesslevel"
                label="COM_MAMS_SELECT_FEATACCESS"
                description="COM_MAMS_SELECT_FEATACCESS"
                onchange="this.form.submit();"
        >
            <option value="">COM_MAMS_SELECT_FEATACCESS</option>
        </field>
        <field
                name="sec"
                type="selectsecs"
                label="COM_MAMS_SELECT_SEC"
                onchange="this.form.submit();"
                layout="joomla.form.field.list-fancy-select"
        >
            <option value="">COM_MAMS_SELECT_SEC</option>
        </field>
        <field
                name="cat"
                type="selectcats"
                label="COM_MAMS_SELECT_CAT"
                onchange="this.form.submit();"
                layout="joomla.form.field.list-fancy-select"
        >
            <option value="">COM_MAMS_SELECT_CAT</option>
        </field>
        <field
                name="tag"
                type="selecttags"
                label="COM_MAMS_SELECT_TAG"
                onchange="this.form.submit();"
                layout="joomla.form.field.list-fancy-select"
        >
            <option value="">COM_MAMS_SELECT_TAG</option>
        </field>
        <field
                name="auth"
                type="selectauthors"
                label="COM_MAMS_SELECT_AUTHOR"
                onchange="this.form.submit();"
                layout="joomla.form.field.list-fancy-select"
        >
            <option value="">COM_MAMS_SELECT_AUTHOR</option>
        </field>
    </fields>
    <fields name="list">
        <field
                name="fullordering"
                type="list"
                label="COM_CONTENT_LIST_FULL_ORDERING"
                description="COM_CONTENT_LIST_FULL_ORDERING_DESC"
                onchange="this.form.submit();"
                default="a.art_publish_up DESC"
        >
            <option value="">JGLOBAL_SORT_BY</option>
            <option value="a.art_title ASC">JGLOBAL_TITLE_ASC</option>
            <option value="a.art_title DESC">JGLOBAL_TITLE_DESC</option>
            <option value="a.access ASC">JGRID_HEADING_ACCESS_ASC</option>
            <option value="a.access DESC">JGRID_HEADING_ACCESS_DESC</option>
            <option value="a.art_added ASC">Added Ascending</option>
            <option value="a.art_added DESC">Added Descending</option>
            <option value="a.art_modified ASC">Modified Ascending</option>
            <option value="a.art_modified DESC">Modified Descending</option>
            <option value="a.art_id ASC">JGRID_HEADING_ID_ASC</option>
            <option value="a.art_id DESC">JGRID_HEADING_ID_DESC</option>
            <option value="a.ordering ASC">Order Ascending</option>
            <option value="a.ordering DESC">Order Descending</option>
            <option value="a.art_publish_up ASC">COM_MAMS_ARTICLE_HEADING_PUBLISH_ON_ASC</option>
            <option value="a.art_publish_up DESC">COM_MAMS_ARTICLE_HEADING_PUBLISH_ON_DESC</option>
            <option value="a.art_publish_down ASC">COM_MAMS_ARTICLE_HEADING_PUBLISH_DOWN_ASC</option>
            <option value="a.art_publish_down DESC">COM_MAMS_ARTICLE_HEADING_PUBLISH_DOWN_DESC</option>
            <option value="a.art_hits ASC">JGLOBAL_HITS_ASC</option>
            <option value="a.art_hits DESC">JGLOBAL_HITS_DESC</option>
        </field>
        <field
                name="limit"
                type="limitbox"
                class="input-mini"
                default="50"
                label="COM_CONTENT_LIST_LIMIT"
                description="COM_CONTENT_LIST_LIMIT_DESC"
                onchange="this.form.submit();"
        />
    </fields>
</form>