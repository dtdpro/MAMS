<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="details">
		<field
			name="sec_id"
			type="text"
			class="readonly" 
			label="JGLOBAL_FIELD_ID_LABEL"
			description ="JGLOBAL_FIELD_ID_DESC"
			readonly="true"
		/>
		<field
			name="published"
			type="list"
			id="published"
			class="inputbox"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC"
			size="1"
			default="1"
			filter="integer">
			<option	value="1">JPUBLISHED</option>
			<option	value="0">JUNPUBLISHED</option>
			<option	value="2">JARCHIVED</option>
			<option	value="-2">JTRASHED</option>
		</field>
		<field
			name="access"
			type="accesslevel"
			id="access"
			class="inputbox"
			label="JFIELD_ACCESS_LABEL"
			description="JFIELD_ACCESS_DESC"
			default="1"
			filter="integer"/>
		<field
			name="ordering"
			type="OrderSec"
			class="inputbox"
			label="JFIELD_ORDERING_LABEL"
			description="JFIELD_ORDERING_DESC"
		/>
		<field
			name="sec_name"
			type="text"
			label="COM_MAMS_SEC_FIELD_NAME_LABEL"
			description="COM_MAMS_SEC_FIELD_NAME_DESC"
			size="60"
			class="inputbox"
			required="true"
			default=""
		/>
		<field
			name="sec_alias"
			type="text"
			label="COM_MAMS_SEC_FIELD_ALIAS_LABEL"
			description="COM_MAMS_SEC_FIELD_ALIAS_DESC"
			size="60"
			class="inputbox"
			default=""
		/>
		<field
			name="sec_type"
			type="radio"
			class="btn-group"
			label="COM_MAMS_SEC_FIELD_TYPE_LABEL"
			description="COM_MAMS_SEC_FIELD_TYPE_DESC"
			default="article">
			<option	value="article">Article</option>
			<option	value="author">Author</option>
		</field>
		<field
			name="sec_desc"
			type="textarea"
			label="COM_MAMS_SEC_FIELD_DESC_LABEL"
			description="COM_MAMS_SEC_FIELD_DESC_DESC"
			rows="4"
			cols="70"
			class="inputbox"
			filter="safehtml"
			buttons="false"
		/>
	</fieldset>
</form>

