<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="2.5" client="site" method="upgrade">
	<name>mod_mamslatest</name>
	<author>DtD Productions</author>
	<creationDate>September 2012</creationDate>
	<copyright>Copyright 2012 DtD Productions All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>info@dtdpro.com</authorEmail>
	<authorUrl>www.dtdpro.com</authorUrl>
	<version>1.1.0</version>
	<description>MOD_MAMSLATEST_XML_DESCRIPTION</description>
	<files>
		<filename module="mod_mamslatest">mod_mamslatest.php</filename>
		<folder>tmpl</folder>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<filename>mod_mamslatest.xml</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.mod_mamslatest.ini</language>
		<language tag="en-GB">en-GB.mod_mamslatest.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic" addfieldpath="administrator/components/com_mams/models/fields">
				<field name="secid" type="Secs" description="MOD_MAMSLATEST_SECTION_DESC" label="MOD_MAMSLATEST_SECTION_LABEL" required="true" />
				<field name="count" type="text" default="5" label="MOD_MAMSLATEST_COUNT_LABEL" description="MOD_MAMSLATEST_COUNT_DESC" />
				<field name="show_pubinfo" type="radio" description="MOD_MAMSLATEST_SHOW_PUBINFO_DESC" label="MOD_MAMSLATEST_SHOW_PUBINFO_LABEL" default="1">
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>
				<field name="show_pubdate" type="radio" description="MOD_MAMSLATEST_SHOW_PUBDATE_DESC" label="MOD_MAMSLATEST_SHOW_PUBDATE_LABEL" default="1">
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>
				<field name="show_pubsec" type="radio" description="MOD_MAMSLATEST_SHOW_PUBSEC_DESC" label="MOD_MAMSLATEST_SHOW_PUBSEC_LABEL" default="1">
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>
				<field name="show_pubcat" type="radio" description="MOD_MAMSLATEST_SHOW_PUBCAT_DESC" label="MOD_MAMSLATEST_SHOW_PUBCAT_LABEL" default="1">
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>
				<field name="link_pubinfo" type="radio" description="MOD_MAMSLATEST_LINK_PUBINFO_DESC" label="MOD_MAMSLATEST_LINK_PUBINFO_LABEL" default="0">
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>
				<field name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="" />
			</fieldset>
		</fields>
	</config>
</extension>
